.module
  background #fff
  box-shadow 0px 2px 5px 0px rgba(0,0,0,0.12)
  border-radius 5px
  margin-bottom 50px
  padding 10px 30px
  transition all 0.2s ease
  position relative

  &.inverted
    background: #000;

p
  color #999
  font-size 12px
  margin 0 0 20px 0

  &.show-hide-code,
  &.copy
    cursor pointer
    font-size 15px
    position absolute
    right 10px
    top 10px
    &:hover
      opacity .7
  &.is-dark
    color #fff

.relative
  position relative

.overflow
  overflow-x auto

.width-transition
  width calc(100% + 30px)

h2
  font-weight 400
  font-size 24px

code,
code[class*="language-"],
pre[class*="language-"]
  font-family Menlo, Monaco, "Lucida Console", "Liberation Mono", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Courier New", monospace, serif !important
  font-size 13px !important
  line-height 20px !important
  margin 0 !important
  padding 20px !important
  text-shadow 0 1px white !important
  color #0076ff !important
  &::selection
    color rgb(0, 0, 0) !important
    background rgb(255, 0, 128) !important

.token
  &.punctuation, &.operator
    color #000 !important
    background none !important
  &.string
    color #028265 !important
  &.keyword
    color #ff0078 !important
    font-weight bolder !important
  &.function, &.tag, &.class-name, &.number, &.tag.punctuation
    color: #0076ff !important
  &.comment, &.prolog, &.doctype, &.cdata
    color: #999 !important

.hidden
  display none !important
