body, html
  margin 0
  box-sizing border-box

.module
  background #fff
  box-shadow 0px 2px 5px 0px rgba(0,0,0,0.12)
  border-radius 5px
  margin-bottom 50px
  padding 10px 30px
  transition all 0.2s ease
  position relative

  &.inverted
    background: #000;

p
  color #999
  font-size 12px
  margin 0 0 20px 0

  &.show-hide-code,
  &.copy
    cursor pointer
    font-size 15px
    position absolute
    right 10px
    top 10px
    &:hover
      opacity .7
  &.is-dark
    color #fff

.relative
  position relative

.overflow
  overflow-x auto

.width-transition
  width calc(100% + 30px)

.black-text
  color #000

.font-normal
  font-weight normal

h2
  font-weight 400
  font-size 24px

code,
code[class*="language-"],
pre[class*="language-"]
  font-family Menlo, Monaco, "Lucida Console", "Liberation Mono", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Courier New", monospace, serif !important
  font-size 13px !important
  line-height 20px !important
  margin 0 !important
  text-shadow 0 0 white !important
  color #0076ff !important

.token
  &.punctuation, &.operator
    color #555 !important
    background none !important
  &.string
    color #028265 !important
  &.keyword
    color #ff0078 !important
    font-weight bolder !important
  &.function, &.tag, &.class-name, &.number, &.tag.punctuation
    color: #0076ff !important
  &.comment, &.prolog, &.doctype, &.cdata
    color: #999 !important

.is-hr
  border-top 1px solid #999

pre[class*="language-"]::selection, pre[class*="language-"] ::selection, code[class*="language-"]::selection, code[class*="language-"] ::selection
  color white !important
  background rgb(255, 0, 128) !important

.hidden
  display none !important

.normal-grid
  display grid
  width 100%
  height 100%
  margin-left -20px
  grid-auto-rows minmax(100px, auto)
  grid-template-columns repeat(auto-fill, minmax(100px, 1fr))
  .module
    justify-self center
    align-self center
    padding 20px

:not(pre) > code[class*="language-"], pre[class*="language-"]
  background none !important

.title
  display flex
  align-items center
  flex-flow row nowrap

.pointer
  cursor pointer

.block
  display block

.subtitle
  font-weight 400
  font-size 1rem
  line-height 2rem
  color #000

.container-block
  box-shadow rgba(0, 0, 0, 0.12) 0px 2px 5px 0px
  width 100px
  display inline-block
  margin-right 20px
  margin-top 20px
  margin-bottom 40px
  cursor pointer
  padding 10px
  border-radius 5px
  background rgb(255, 255, 255)
  transition all 0.2s ease 0s
  box-sizing border-box

.is-doc-link
  color rgb(13, 125, 247)
  min-width initial
  height 19px
  line-height 19px
  box-shadow none
  border-width 0px
  border-style initial
  border-color initial
  border-image initial
  background transparent
  padding 0px
  text-decoration none
  &:hover
    text-decoration underline

.mr-left
  margin-left 1em
